<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple_view_usd"
        app:mrl_rippleColor="@color/colorPrimaryDark"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleAlpha="0.3"
        app:mrl_rippleHover="true"
        app:mrl_rippleDuration="150"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleDelayClick="true"
        app:mrl_ripplePersistent="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_country_flag"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@null"
                tools:src="@drawable/currency_flag_usa"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/select_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:textColor="@color/colorTextMain"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                tools:text="@string/usd" />

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View
        android:id="@+id/seperate_line"
        android:layout_width="match_parent"
        android:background="@drawable/line_white"
        android:layout_height="9dp" />


</LinearLayout>