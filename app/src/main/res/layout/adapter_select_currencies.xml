<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple_view"
            app:mrl_rippleColor="@color/colorPrimaryDark"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleAlpha="0.3"
            app:mrl_rippleHover="true"
            app:mrl_rippleDuration="150"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="true"
            app:mrl_ripplePersistent="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/select_currency_country_flag"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:background="@null"
                    tools:src="@drawable/currency_flag_armenia"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/select_currency_currency_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@null"
                        tools:src="@drawable/icon_grn_dark"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/select_currency_country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextMain"
                    android:textSize="21sp"
                    tools:text="@string/usd"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:id="@+id/seperate_line"
            android:layout_width="match_parent"
            android:background="@drawable/line_white"
            android:layout_height="9dp" />

</LinearLayout>
