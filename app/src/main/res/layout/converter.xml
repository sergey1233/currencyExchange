<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".ui.Converter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                app:mrl_rippleColor="@color/colorPrimary"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleHover="true"
                app:mrl_rippleDuration="150"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleDelayClick="true"
                app:mrl_ripplePersistent="false"
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageButton
                    android:id="@+id/icon_main_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    app:srcCompat="@drawable/icon_main_dark"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                app:mrl_rippleColor="@color/colorPrimary"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleHover="true"
                app:mrl_rippleDuration="150"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleDelayClick="true"
                app:mrl_ripplePersistent="false"
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageButton
                    android:id="@+id/icon_converter_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    app:srcCompat="@drawable/icon_converter_dark"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                app:mrl_rippleColor="@color/colorPrimary"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleHover="true"
                app:mrl_rippleDuration="150"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleDelayClick="true"
                app:mrl_ripplePersistent="false"
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <ImageButton
                    android:id="@+id/icon_currency_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    tools:src="@drawable/icon_dollar_dark"/>

            </com.balysv.materialripple.MaterialRippleLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/flag_from"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/flag_usa_dark"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                app:srcCompat="@drawable/arrow_to_flag"/>

                            <ImageView
                                android:id="@+id/flag_to"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                tools:src="@drawable/flag_ukraine_dark"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <ImageView
                                android:id="@+id/currency_from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                tools:src="@drawable/icon_dollar_dark"/>

                            <EditText
                                android:id="@+id/count_from_edittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/white"
                                android:textColor="@color/colorTextMain"
                                android:textColorHint="@color/colorTextMain"
                                android:gravity="right"
                                android:textSize="24sp"
                                android:maxLength="8"
                                android:text="0"
                                android:inputType="numberDecimal"
                                android:imeOptions = "actionDone"/>

                            <com.balysv.materialripple.MaterialRippleLayout
                                app:mrl_rippleColor="@color/colorPrimaryDark"
                                app:mrl_rippleOverlay="true"
                                app:mrl_rippleAlpha="0.5"
                                app:mrl_rippleDimension="10dp"
                                app:mrl_rippleHover="true"
                                app:mrl_rippleRoundedCorners="10dp"
                                app:mrl_rippleDuration="350"
                                app:mrl_rippleFadeDuration="75"
                                app:mrl_rippleDelayClick="true"
                                app:mrl_ripplePersistent="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp">

                                <Button
                                    android:id="@+id/button_counted"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@color/colorButtonSum"
                                    android:text="="
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="32sp"
                                    android:textAlignment="center"
                                    android:gravity="center"/>

                            </com.balysv.materialripple.MaterialRippleLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/own_currency_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_gravity="bottom">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorText"
                                    android:textSize="20sp"
                                    android:text="@string/by_exchange"/>

                                <EditText
                                    android:id="@+id/currency_exchange_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="16dp"
                                    android:backgroundTint="@color/hint"
                                    android:textColor="@color/colorTextMain"
                                    android:textColorHint="@color/colorTextMain"
                                    android:gravity="right"
                                    android:textSize="24sp"
                                    android:maxLength="6"
                                    android:inputType="numberDecimal"
                                    android:imeOptions = "actionDone"/>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:gravity="right">

                                <ImageView
                                    android:id="@+id/currency_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="12dp"
                                    tools:src="@drawable/icon_grn_dark"/>

                                <TextView
                                    android:id="@+id/count_to_result"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"

                                    android:textColor="@color/colorTextMain"
                                    android:textSize="24sp"
                                    android:text="0" />

                            </LinearLayout>

                        </LinearLayout>



                        <com.balysv.materialripple.MaterialRippleLayout
                            app:mrl_rippleColor="@color/colorPrimaryDark"
                            app:mrl_rippleOverlay="true"
                            app:mrl_rippleAlpha="0.5"
                            app:mrl_rippleDimension="10dp"
                            app:mrl_rippleHover="true"
                            app:mrl_rippleRoundedCorners="10dp"
                            app:mrl_rippleDuration="350"
                            app:mrl_rippleFadeDuration="75"
                            app:mrl_rippleDelayClick="true"
                            app:mrl_ripplePersistent="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="8dp">

                            <Button
                                android:id="@+id/set_own_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorButton"
                                android:padding="16dp"
                                android:text="@string/set_own_currency"
                                android:textColor="@color/colorTextMain"
                                android:textAllCaps="false"/>

                        </com.balysv.materialripple.MaterialRippleLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark"
                        android:padding="12dp">

                        <android.support.design.widget.TabLayout
                            android:id="@+id/tabs"
                            android:background="@color/colorPrimaryDark"
                            app:tabIndicatorColor="@color/white"
                            app:tabBackground="@color/colorPrimaryDark"
                            app:tabTextColor="@color/colorTextMain"
                            app:tabSelectedTextColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabMode="fixed"
                            app:tabGravity="fill"/>

                        <com.sergey.currencyexchange.ui.widgets.WrapContentHeightViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
