<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:id="@+id/nbu_rates_country_flag"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_marginTop="14dp"
                tools:background="#cccccc"/>

            <TextView
                android:id="@+id/nbu_rates_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                tools:text="HUF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/nbu_rates_country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="13sp"
                    tools:text="@string/hong_kong"/>


                <TextView
                    android:id="@+id/nbu_rates_currency_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorText"
                    android:textSize="10sp"
                    tools:text="@string/hong_kong_currency"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/nbu_rates_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorText"
                    android:textSize="11sp"
                    tools:text="14.03.16 15:06"/>

                <TextView
                    android:id="@+id/nbu_rates_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="0.998888777" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/line_recycle"
            android:layout_width="match_parent"
            android:background="@drawable/line_dark"
            android:layout_height="15dp" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>