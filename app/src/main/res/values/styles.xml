<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/hint</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Обновление данных…</item>
        <item name="DialogSpotColor">@color/colorText</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LinearProgressView" parent="Material.Drawable.LinearProgress">
        <item name="lpd_strokeColor">@color/green</item>
        <item name="lpd_strokeSecondaryColor">@android:color/transparent</item>
        <item name="lpd_reverse">true</item>
        <item name="pv_autostart">false</item>
        <item name="pv_circular">false</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="lpd_strokeColors">@array/scheme_colors</item>
    </style>

</resources>
